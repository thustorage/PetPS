#
# src/Makefile -- Makefile for PMDK
#
TOP := $(dir $(lastword $(MAKEFILE_LIST)))..
include $(TOP)/src/common.inc
# core targets
TARGETS = libpmem libpmemobj
ALL_TARGETS = $(TARGETS) common
RELEASE_TARGETS=$(ALL_TARGETS)


all:  $(ALL_TARGETS)

clean: $(CLEAN_TARGETS:=-clean)

libpmemobj: libpmem

$(RELEASE_TARGETS):
	$(MAKE) -C $@


clean-here:
	rm -rf nondebug debug

clean: clean-here


.PHONY: all $(ALL_TARGETS)
